---
/* import BaseHead from "../components/BaseHead.astro"; */
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Tawk from "../components/Tawk.astro";
import Analytics from "../components/Analytics.astro";
import { SEO } from "astro-seo";
import "../styles/styles.css";
import heroImage from "../images/hero3-og.png";
import { getImage } from "astro:assets";

const fallbackOgImage = await getImage({
  src: heroImage,
  format: "jpg",
  height: 200,
});

const {
  current,
  animateHeader,
  withBorder,
  withIntercom,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  ogImage = fallbackOgImage,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    {import.meta.env.PROD && <Analytics />}
    <!-- <BaseHead title={title} description={description} ogImage={ogImage} /> -->

    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png?"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png?"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png?"
    />
    <link rel="manifest" href="/site.webmanifest" />

    <meta name="generator" content={Astro.generator} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={title}
      href={`${Astro.site}rss.xml`}
    />

    <!-- Font preloads -->
    <link
      rel="preload"
      href="/fonts/atkinson-regular.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/atkinson-bold.woff"
      as="font"
      type="font/woff"
      crossorigin
    />

    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: new URL(ogImage.src, Astro.url).href,
          url: Astro.url,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: new URL(ogImage.src, Astro.url).href,
        creator: "@RockingML",
      }}
    />
  </head>

  <body id="top" class="ss-preload">
    <Header current={current} animateHeader={animateHeader} />

    <slot />

    <Footer withBorder={withBorder} />
    {import.meta.env.PROD && withIntercom && <Tawk />}
  </body>
</html>
